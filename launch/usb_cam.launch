<launch>
  <arg name="image_width" default="1280" />
  <arg name="image_height" default="720" />
  <arg name="debug" default="true"/>
  <node name="usb_cam" pkg="usb_cam" type="usb_cam_node" output="screen" >
    <param name="video_device" value="/dev/video0" />
    <param name="image_width" value="$(arg image_width)" />
    <param name="image_height" value="$(arg image_height)" />
    <param name="pixel_format" value="yuyv" />
    <param name="camera_frame_id" value="usb_cam" />
    <param name="io_method" value="mmap"/>
  </node>
  <node if="$(arg debug)" name="image_view" pkg="image_view" type="image_view" respawn="false" output="screen">
    <remap from="image" to="/usb_cam1/image_raw"/>
    <param name="autosize" value="true" />
  </node>
  <node pkg="tf2_ros" type="static_transform_publisher" name="logitech_head_cam" args="0.04 0.025 0 0 0 0 1 head_camera logitech_head_camera" />
</launch>
